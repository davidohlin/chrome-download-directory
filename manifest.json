{
  "manifest_version": 2,
  "name": "Github Download Directory",
  "version": "1.0.0",
  "description": "Add a button to download subdirectories from a Github repository",
  "author": "David Ã–hlin",
  "permissions": [
     "tabs",
     "activeTab",
     "webNavigation",
     "https://github.com/*"
  ],
  "content_scripts": [{
  	"matches": ["<all_urls>"],
    "js": ["js/content.js"]
  }],
  "background": {
    "persistent": false,
    "scripts": ["js/background.js"]
  },
  "icons": {
  	"128": "images/icon128.png"
  }
}
